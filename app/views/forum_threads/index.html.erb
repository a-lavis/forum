<% content_for :title, "Forum threads" %>

<h1>Forum threads</h1>

<div id="forum_threads">
  <% @forum_threads.each do |forum_thread| %>
    <%= render forum_thread %>
    <p>
      <%= link_to "Show this forum thread", forum_thread %>
    </p>
  <% end %>
</div>

